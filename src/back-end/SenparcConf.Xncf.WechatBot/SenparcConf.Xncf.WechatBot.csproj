<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Version>0.1</Version>
	  <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
	  <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <AssemblyName>SenparcConf.Xncf.WechatBot</AssemblyName>
    <RootNamespace>SenparcConf.Xncf.WechatBot</RootNamespace>
    <GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' ">true</GeneratePackageOnBuild>
    <Description>自动回复机器人</Description>
    <Copyright>SenparcConf</Copyright>
    <PackageTags>SenparcConf,NeuCharFramework,NCF,SenparcConf.Xncf.WechatBot</PackageTags>
    <Authors>SenparcConf</Authors>
    <Owners>SenparcConf</Owners>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <Title>微信机器人</Title>
    <!--<ProjectUrl> https://github.com/NeuCharFramework/NCF</ProjectUrl>
    <PackageProjectUrl>https://github.com/NeuCharFramework/NcfPackageSources</PackageProjectUrl>-->
    <PackageIcon>icon.jpg</PackageIcon>
    <PackageReleaseNotes>
			v0.1 创世
</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/NeuCharFramework/NcfPackageSources</RepositoryUrl>
    <Configurations>Debug;Release;Test;TemplateRelease</Configurations>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <OutputPath>..\..\..\BuildOutPut</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Senparc.AI.Kernel" Version="0.6.5-rc3" />
    <PackageReference Include="Senparc.CO2NET.WebApi" Version="1.5.1" />
    <!--<PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="5.0.0" />-->
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" Version="2.2.0" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Senparc.Ncf.DatabasePlant" Version="0.13.5-beta1" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Senparc.Ncf.XncfBase" Version="0.14.1.7-beta1" />
    <PackageReference Include="Senparc.Ncf.AreaBase" Version="0.13.1.1-beta1" />
    <PackageReference Include="Senparc.Weixin.MP" Version="16.20.4" />
    <PackageReference Include="Senparc.Xncf.AIKernel" Version="0.1.0.1" />
    <PackageReference Include="Senparc.Xncf.WeixinManager" Version="0.11.0.2-beta1" />
    <None Include="App_Data\SenparcTraceLog\*" />
  </ItemGroup>
  <ItemGroup>
    <Content Remove="App_Data\Database\SenparcConfig.config" />
  </ItemGroup>
  <ItemGroup>
    <None Include="App_Data\Database\SenparcConfig.config">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <!--<PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="5.0.1" />-->
    <!-- 为解决 VS 2019 v16.8 的一个bug，需要添加下方引用 -->
    <!--<PackageReference Include="Microsoft.NET.Sdk.Razor" Version="3.1.10" />-->
  </ItemGroup>
</Project>